{
  "compilerOptions": {
    // Use ${configDir} to make paths relative to the tsconfig.json location
    "outDir": "${configDir}/dist",
    "rootDir": "${configDir}/src",
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["es2020", "dom", "dom.iterable"],
    "typeRoots": [
      "${configDir}/node_modules/@types/",
      "${configDir}/node_modules/vite"
    ],

    // strictness
    "strict": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "allowJs": false,

    // no need for checking libs
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,


    // important for Linux
    "forceConsistentCasingInFileNames": true,

    // linting
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // These slow down compilation and are not necessary for our use case
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true, // Enable when ready to fix bracket notation
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // This doesn't seem actually useful
    //"exactOptionalPropertyTypes": true,

    // modules
    "resolveJsonModule": false, // causes problems by hoisting json files, and src to the root of the dist folder
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    "incremental": false,
    "esModuleInterop": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,


  },
  "include": ["${configDir}/src/**/*"],
  "exclude": ["${configDir}/node_modules", "${configDir}/dist"]
}
