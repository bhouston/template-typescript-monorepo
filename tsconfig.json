{
  "compilerOptions": {
    // Use ${configDir} to make paths relative to the tsconfig.json location
    "outDir": "${configDir}/dist",
    "rootDir": "${configDir}/src",
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["es2020", "dom", "dom.iterable"],
    "typeRoots": [
      "${configDir}/node_modules/@types/",
      "${configDir}/node_modules/vite"
    ],

    // strictness
    "strict": true,
    "alwaysStrict": true,
    "allowJs": false,

    // no need for checking libs
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,


    // important for Linux
    "forceConsistentCasingInFileNames": true,

    "strictFunctionTypes": true,
    "strictBuiltinIteratorReturn": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,

    // linting
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useUnknownInCatchVariables": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,

    // This doesn't seem actually useful
    //"exactOptionalPropertyTypes": true,
    // biome recommends against.
    //"noPropertyAccessFromIndexSignature": false,
    // causes problems by hoisting json files, and src to the root of the dist folder
    //"resolveJsonModule": false, 
    
    // modules
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    "esModuleInterop": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "incremental": true,
    // putting it in the dist folder makes it easier to cleanup and avoid checking in.
    "tsBuildInfoFile": "${configDir}/dist/.tsbuildinfo",
  },
  "include": ["${configDir}/src/**/*"],
  "exclude": ["${configDir}/node_modules", "${configDir}/dist"]
}
